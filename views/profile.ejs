<%- include('block/header') %>
<%- include('partials/messages') %>
<div class="container mb-5">
    <div class="mt-3 p-1 row border border-2 border-secondary rounded col-md-9 mx-auto">
        <h1 class="text-center">This is your profile page</h1>
        <h3 class="text-center border-2 border-bottom">Feel free to edit your name or upload a new profile picture</h3>
        <br><br>
        <div class="col-md-4 border-2 border-end">
            <form method="POST" action="/profile/editName">
                <input type="text" name="newUserName" value="<%= user.name %>" />
                <br><br>
                <input type="submit" class="btn btn-primary" value="Save change" />
            </form>
        </div>
        <div class="col-md-5">
            <form method="POST" enctype="multipart/form-data" action="/profile/photo">
                <input type="file" name="profile_photo">
                <br><br>
                <input type="submit" class="btn btn-primary" value="Save change" />
            </form>
        </div>
        <div class="col-md-3 border-2 border-start">
            <p>Current pic: </p>
            <img id="small_pic" src="<%= user.profilePhoto %>" alt="profilePhoto">
        </div>
    </div>
</div>
<%- include ('./block/sidebar') %>
<%- include('block/footer') %>
<script src="/public/scripts/script.js"></script>