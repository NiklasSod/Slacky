<% if (typeof errors != 'undefined') { %>
    <% for (error of errors) { %>
        <div class="alert alert-warning col-md-5 text-center mx-auto" role="alert">
            <%= error.msg %>
        </div>
    <% } %> 
<% } %> 

<% if(success_msg != '') { %>
    <div class="alert alert-success col-md-3 text-center mx-auto" role="alert">
        <%= success_msg %> 
    </div>
<% } %> 

<% if(error_msg != '') { %>
    <div class="alert alert-success col-md-3 text-center mx-auto" role="alert">
        <%= error_msg %> 
    </div>
<% } %> 