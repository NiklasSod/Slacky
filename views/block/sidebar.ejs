<div class="container mt-3">
    <div class="row">
        <div class="col-md-5">
            <h3 class="text-center">Channels</h3>
            <ul id="channelsUl">
                <table class="container-fluid table table-condensed table-hover table-striped table-bordered">
                    <tr class="d-flex">
                        <th class="col-8">Name</th>
                        <th class="col-4">Delete</th>
                    </tr>
                    <% channels.forEach( channel => { %>
                        <tr class="d-flex">
                            <td class="col-8"><a href="/channel/<%= channel._id %>"><%= channel.name %></a></td>
                            <td class="col-4"><a href="/home/delete/<%= channel._id %>">X</a></td>
                        </tr>
                    <% }) %>
                </table>
            </ul>
        </div>
        <div class="col-md-5">
            <h3 class="text-center">Users</h3>
            <ul id="usersUl">
            </ul>
        </div>
        <div class="col-md-2">
            <h2 class="text-center">New channel</h2>
            <br>
            <form method="post" action="/home/create">
                <input type="text" name="name" placeholder="Channel name here" required/><br />
                <input
                    type="text"
                    name="description"
                    placeholder="Channel description here"
                    maxlength="50"
                /><br />
                <span>Private? </span><input type="checkbox" name="private" /><br />
                <input type="submit" value="Create Channel" />
            </form>
        </div>
    </div>
</div> 